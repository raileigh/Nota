{% extends "::base.html.twig"%}

{% block body %}
  <form action="{{ url('notes_registrar') }}" method="post">
    <div class="form-group, text-center, col-xs-12" style="padding-top:10%; text-align:center">
      <div class="form-group, text-center, col-xs-12" style="padding-left:30%">
        <label for="exampleInputName2" class="control-label, col-xs-2" style="margin-top:5px">Nombre</label>
        <div class="col-xs-4">
        <input type="text" class="form-control" name="nombre" placeholder="Nombre">
        </div>
      </div>
      <div class="form-group, text-center, col-xs-12" style="padding-left:30%; margin-top: 7px">
        <label class="sr-only, control-label, col-xs-2" style="margin-top:5px">Contraseña</label>
        <div class="col-xs-4">
          <input type="password" class="form-control" name="password" placeholder="Contraseña">
        </div>
      </div>
       <INPUT class="btn btn-default" style="margin-top:10px" type="submit" value="REGISTRAR" name="registrar"><BR>
    </div>
  </form>
{% endblock %}