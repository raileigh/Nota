{% extends "::base.html.twig"%}

{% block body %}
  <FORM action="{{ url('notes_editar') }}" method="post">
   <div class="form-group, text-center, col-xs-10" style="padding-top:30px; margin-left:2%">
    <div class="col-xs-12, col-sm-4">
      <input type="text" class="form-control" name="titulo" placeholder="TÍTULO" style="text-align:center; margin-top:7px" value="{{nota.titulo}}">
    </div>
    <div class="col-xs-12, col-sm-4">
      <input type="text" class="form-control" name="contenido" placeholder="CONTENIDO" style="text-align:center; margin-top:7px"value="{{nota.contenido}}">
    </div>
    <div class="form-group, col-xs-2, col-lg-12, float: none" style="margin-top:7px; margin-left:34%">
      <div class="col-xs-2" >
        <button type="submit" class="btn btn-default" aria-label="Left Align" name="editar">
         <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
       </button><BR>
       <INPUT type="text" hidden name="id" value="{{nota.id}}"><BR>{# para mandar un campo escondido con el valor que yo quiero en este caso el id de esta nota, no quiero mostrar el id al usuario#}
       </div>
     </div>
   </div>
 </FORM>
{% endblock %}
