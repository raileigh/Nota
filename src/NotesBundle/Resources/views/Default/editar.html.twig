{% extends "::base.html.twig"%}

{% block body %}
 	<FORM action="{{ url('notes_editar') }}" method="post">
 		<div class="form-group, text-center, col-xs-12" style="padding-top:30px">
        <label class="control-label, col-xs-1" style="margin-top:5px">TITULO</label>
        <div class="col-xs-4">
          <input type="text" class="form-control" name="titulo" value="{{nota.titulo}}">
        </div>
        <label class="control-label, col-xs-1" style="margin-top:5px">CONTENIDO</label>
        <div class="col-xs-4">
          <input type="text" class="form-control" name="contenido" value="{{nota.contenido}}">
        </div>
        <div class="form-group, col-xs-2">
        <div class="col-xs-2">
          <button type="submit" class="btn btn-default" aria-label="Left Align" name="editar">
  			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
		  </button><BR>
     	  <INPUT type="text" hidden name="id" value="{{nota.id}}"><BR>{# para mandar un campo escondido con el valor que yo quiero en este caso el id de esta nota, no quiero mostrar el id al usuario#}
        </div>
        </div>
      </div>
     </FORM>
{% endblock %}
