{% extends "::base.html.twig"%}
{% block body %}
  <form class="form-horizontal" action="{{ url('notes_crear') }}" method="post">
    <div class="form-group, text-center, col-xs-12" style="padding-top:15px">
      <div class="col-xs-6, col-sm-4">
        <input type="text" class="form-control" name="titulo" placeholder="TÍTULO" style="text-align:center; margin-top:7px">
      </div>
      <div class="col-xs-6, col-sm-4">
        <input type="text" class="form-control" name="contenido" placeholder="CONTENIDO" style="text-align:center; margin-top:7px">
      </div>
      <div class="form-group, col-xs-3, col-sm-4" style="margin-top:7px">
        <div class="col-xs-1" style="margin-left:25px">
          <button type="submit" class="btn btn-default" name="crear">CREAR</button>
        </div>
        <div class="col-xs-1" style="margin-left: 40%">
          <a href="{{ path('notes_cerrar') }}"class="btn btn-default btn-md, button"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span></a>
        </div>
      </div>
    </div>
  </form>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <div>
    {% for nota in notas %}
      <div class="panel panel-default" style="margin-top:7%">
        <div class="panel-heading">
          {{nota.fecha|date("d/m/Y H:m:i")}}<br>
          <div class="hidden">
            id:{{nota.id}}
          </div><br>
          <h3 class="panel-title">Título:{{nota.titulo}}</h3>
        </div>
        <div class="panel-body">Contenido:{{nota.contenido}}
        </div>
      </div>
    </div>
    <!-- Trigger the modal with a button -->
    <a href="{{ path('notes_eliminar', { id: nota.id }) }}" onclick="return confirm('¿Estás seguro que deseas eliminar la nota?');" class="btn btn-default btn-md"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
    <a href="{{ path('notes_actualizar', { id: nota.id }) }}" class="btn btn-default btn-md"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
    <br>
    <br>
  {% endfor %}
{% endblock %}  
