{% extends "::base.html.twig"%}

{% block body %}
<form class="form-horizontal" action="{{ url('notes_crear') }}" method="post">
  <div class="form-group, text-center, col-xs-12">
    <label class="control-label, col-xs-1">Titulo</label>
    <div class="col-xs-3">
      <input type="text" class="form-control" name="titulo">
    </div>
  </div>
  <div class="form-group, text-center, col-xs-12">
    <label class="control-label, col-xs-1">Contenido</label>
    <div class="col-xs-3">
      <input type="text" class="form-control" name="contenido">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" name="crear">Crear</button>
    </div>
  </div>
</form>
	{% for nota in notas %}
		{{nota.fecha|date("d/m/Y H:m:i")}}<br>
		id:{{nota.id}}<br>
		titulo:
		{{nota.titulo}}<br>{{nota.contenido}}<br>
		<a href="{{ path('notes_eliminar', { id: nota.id }) }}">ELIMINAR</a>
		<a data-toggle="modal" href="{{ path('notes_actualizar', { id: nota.id }) }}" data-target="#myModal">EDITAR</a>
		<div id="myModal"></div>
    	<!-- register form here -->
		</div>
		<br>
	{% endfor %}

{% endblock %}

